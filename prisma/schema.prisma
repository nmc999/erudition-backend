// Schools define their own scoring scales (e.g., 1-5 stars, 1-10 points)
model BehaviorScale {
  id String @id @default(uuid())

  // Scale names in both languages
  name        String // English name, e.g., "5-Point Scale"
  nameChinese String? // Chinese name, e.g., "五分制"

  // The range of the scale
  minValue Int @default(1) // Usually 1
  maxValue Int @default(5) // e.g., 5 for a 5-point scale

  // Labels for each score value (stored as JSON)
  // Example: {"1": "Poor", "2": "Needs Work", "3": "OK", "4": "Good", "5": "Excellent"}
  labels        Json? @default("{}")
  labelsChinese Json? @default("{}")

  // Colors for each score value (for the UI)
  // Example: {"1": "#ef4444", "2": "#f97316", "3": "#eab308", "4": "#22c55e", "5": "#10b981"}
  colors Json? @default("{}")

  // Settings
  isDefault Boolean @default(false) // Is this the default scale for the school?
  isActive  Boolean @default(true) // Soft delete - set to false instead of deleting

  // Which school owns this scale
  schoolId String

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  school     School             @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  categories BehaviorCategory[]

  @@index([schoolId])
  @@map("behavior_scales") // The actual table name in the database
}

// Behavior categories that teachers can score (e.g., Effort, Engagement, Focus)
model BehaviorCategory {
  id String @id @default(uuid())

  // Category names in both languages
  name        String // English name, e.g., "Effort"
  nameChinese String? // Chinese name, e.g., "努力程度"

  // Optional descriptions
  description        String?
  descriptionChinese String?

  // Visual settings for the UI
  icon  String? // Icon name from Lucide, e.g., "star", "zap", "target"
  color String? // Hex color, e.g., "#3b82f6"

  // Which scoring scale this category uses
  scaleId String

  // Display order (0 = first, 1 = second, etc.)
  sortOrder Int @default(0)

  // Settings
  isActive Boolean @default(true)

  // Which school owns this category
  schoolId String

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  scale   BehaviorScale    @relation(fields: [scaleId], references: [id], onDelete: Cascade)
  school  School           @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  records BehaviorRecord[]

  @@index([schoolId])
  @@index([scaleId])
  @@map("behavior_categories")
}

// Individual behavior scores (one per student, per class, per category, per day)
model BehaviorRecord {
  id String @id @default(uuid())

  // The date this score is for
  date DateTime @db.Date

  // The actual score (e.g., 1, 2, 3, 4, or 5)
  score Int

  // Optional notes from the teacher
  notes String?

  // Who recorded this score and when
  recordedById String
  recordedAt   DateTime @default(now())

  // Parent notification tracking (for future use)
  parentNotified   Boolean   @default(false)
  parentNotifiedAt DateTime?

  // Foreign keys
  categoryId String // Which behavior category
  classId    String // Which class
  studentId  String // Which student

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  category   BehaviorCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  class      Class            @relation(fields: [classId], references: [id], onDelete: Cascade)
  student    Student          @relation(fields: [studentId], references: [id], onDelete: Cascade)
  recordedBy User             @relation("BehaviorRecordedBy", fields: [recordedById], references: [id])

  // Ensure only one score per student per category per class per day
  @@unique([categoryId, classId, studentId, date])
  @@index([classId, date])
  @@index([studentId, date])
  @@map("behavior_records")
}

