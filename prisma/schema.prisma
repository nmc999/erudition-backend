// ======================
// ASSESSMENTS (Tests, Quizzes, Exams)
// ======================

// Assessment definition (the test/quiz itself)
model Assessment {
  id String @id @default(uuid())

  // Basic info
  name        String // e.g., "Midterm Exam"
  nameChinese String?
  description String?

  // Type of assessment
  type AssessmentType @default(TEST)

  // Scoring
  maxScore     Int      @default(100)
  passingScore Int? // Optional passing threshold
  weight       Decimal? @db.Decimal(3, 2) // Weight for grade calculation (0.00-1.00)

  // Date
  assessmentDate DateTime? @db.Date

  // Which class this is for
  classId String

  // Who created it
  createdById String

  // Settings
  isPublished Boolean @default(false) // Whether parents can see it

  // Multi-tenancy
  schoolId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  school    School            @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  class     Class             @relation(fields: [classId], references: [id], onDelete: Cascade)
  createdBy User              @relation("AssessmentCreator", fields: [createdById], references: [id])
  scores    AssessmentScore[]

  @@index([schoolId])
  @@index([classId])
  @@index([assessmentDate])
  @@map("assessments")
}

enum AssessmentType {
  QUIZ // Short quiz
  TEST // Regular test
  MIDTERM // Midterm exam
  FINAL // Final exam
  HOMEWORK // Graded homework
  PROJECT // Project
  OTHER
}

// Individual student scores on an assessment
model AssessmentScore {
  id String @id @default(uuid())

  // The score
  score    Decimal @db.Decimal(6, 2) // Allows for partial points
  maxScore Int // Store max score at time of grading (in case assessment changes)

  // Optional percentage (calculated)
  percentage Decimal? @db.Decimal(5, 2)

  // Feedback
  feedback        String?
  feedbackChinese String?

  // File attachment (scanned test, etc.) - 5MB limit enforced in API
  fileUrl  String?
  fileName String?
  fileSize Int? // bytes

  // Who graded it
  gradedById String
  gradedAt   DateTime @default(now())

  // Parent notification
  parentNotified   Boolean   @default(false)
  parentNotifiedAt DateTime?

  // Foreign keys
  assessmentId String
  studentId    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  assessment Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  student    Student    @relation(fields: [studentId], references: [id], onDelete: Cascade)
  gradedBy   User       @relation("ScoreGrader", fields: [gradedById], references: [id])

  // One score per student per assessment
  @@unique([assessmentId, studentId])
  @@index([studentId])
  @@map("assessment_scores")
}


